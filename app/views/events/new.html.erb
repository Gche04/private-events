<h1>Create event</h1>

<%= form_with model: @event do |form| %>

  <div>
    <%= form.label :event %>
    <%= form.text_field :event %><br><br>
  </div>

  <div>
    <%= form.label :location %>
    <%= form.text_field :location %><br><br>
  </div>

  <div>
    <%= form.label :event_date %>
    <%= form.date_field :event_date %><br><br>
  </div>

  <div>
    <%= form.label :event_time %>
    <%= form.time_field :event_time %><br><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>